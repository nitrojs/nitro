{
  "compilerOptions": {
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": [
      "WebWorker"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "nitropack": [
        "./src/index"
      ],
      "#internal/nitro": [
        "./src/runtime/index"
      ],
      "#internal/nitro/*": [
        "./src/runtime/*"
      ]
    },
  },
  "include": [
    "src",
    "test",
    "examples"
  ]
}
